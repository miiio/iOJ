<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ioj.wax.ioj">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" >
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        </activity>
        <activity android:name=".LoginActivity" android:windowSoftInputMode="stateVisible|adjustResize" ></activity>
        <activity android:name=".ProblemsView"></activity>
        <activity android:name=".ContestView"></activity>
        <activity android:name=".CodeViewActivity"></activity>
        <activity android:name=".NewsActivity"></activity>
        <activity android:name=".NewsViewActivity"></activity>
        <activity android:name="UserViewActivity"></activity>
        <activity android:name=".SCodeViewActivity"></activity>
        <activity android:name=".SettingActivity"></activity>
    </application>
</manifest>