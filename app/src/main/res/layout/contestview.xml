<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:elevation="2dp"
        android:id="@+id/contestview_appbar"
        android:layout_width="match_parent"
        android:layout_height="140dp">
        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/contestview_collapsing_toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="@color/primary"
            app:collapsedTitleTextAppearance="@style/TextAppearance.AppCompat.Title"
            app:expandedTitleTextAppearance="@style/smalltitle"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@color/primary_dark2"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7"  />
            <LinearLayout
                android:layout_marginTop="30dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="135dp"
                        android:layout_height="100dp"
                        android:background="@drawable/yjjz">
                        <TextView
                            android:layout_gravity="center"
                            android:id="@+id/contestview_acNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:layout_marginTop="32dp"
                            android:textSize="25sp"
                            android:textColor="@color/primary_text"
                            android:text="2 / 5"/>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:paddingRight="5dp"
                            android:id="@+id/contestview_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/icons"
                            android:textStyle="bold"
                            android:text="2016-2017-1《算法分析A》实验四（计科卓越2015）"/>
                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/contestview_problemsNum"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textColor="@color/icons"
                                android:text="problems: 5"/>
                            <ImageView
                                android:layout_marginTop="3dp"
                                android:layout_marginLeft="5dp"
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:src="@drawable/problems"/>
                            <TextView
                                android:layout_marginLeft="8dp"
                                android:id="@+id/contestview_totalscore"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textColor="@color/icons"
                                android:text="/  score: 5"/>
                            <ImageView
                                android:layout_marginTop="2dp"
                                android:layout_marginLeft="5dp"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@drawable/score"/>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <android.support.v7.widget.Toolbar
                android:id="@+id/contestview_toolbar"
                app:theme="@style/toolbar_theme"
                app:navigationIcon="?attr/homeAsUpIndicator"
                app:navigationContentDescription="返回"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin" />
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatbtn_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_anchor="@id/contestview_appbar"
        app:layout_anchorGravity="bottom|right|end"
        android:layout_marginRight="10dp"
        android:clickable="true"
        app:fabSize="normal"
        app:layout_behavior="com.ioj.wax.ioj.ScrollAwareFABBehaviorDefault"
        app:backgroundTint="#ff4081"
        android:src="@drawable/acscore" />
        <android.support.v4.widget.NestedScrollView
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_width="match_parent"
            android:scrollbars="vertical"
            android:layout_height="match_parent">
                    <android.support.v7.widget.RecyclerView
                        android:nestedScrollingEnabled="false"
                        android:id="@+id/contestview_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
        </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>