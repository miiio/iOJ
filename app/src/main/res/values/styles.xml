<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:icon">@color/icons</item>
        <item name="android:divider">@color/divider</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>
    <style name="toolbar_theme" parent="AppTheme">
        <item name="android:textColorSecondary">@color/icons</item>
    </style>
    <style name="menu_theme" parent="AppTheme">
        <item name="android:textColorSecondary">#000000</item>
    </style>
    <style name="Pbv_Theme" parent="AppTheme">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="colorPrimary">@color/icons</item>
    </style>
    <style name="smalltitle">
        <item name="android:textSize">0sp</item>
    </style>
</resources>
